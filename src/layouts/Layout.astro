---
// Layout.astro
const {
  title = "Document",
  description = "「伝えたい想い」をカタチに。ホームページ制作でお悩みの方へ、丁寧なヒアリングと提案で理想を実現します。まずはお気軽にお問い合わせください。",
  ogImage = "/ogp.png",
} = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../assets/styles/style.scss";
const scriptHtml = `
  <script src="/assets/js/main.js"></script>
`;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO基本 -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`https://dddynamis.com${Astro.url.pathname}`} />

    <!-- OGP -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={`https://dddynamis.com${Astro.url.pathname}`}
    />
    <meta name="twitter:card" content="summary_large_image" />
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Critical CSS for immediate rendering with Noto Sans JP -->
    <style is:inline>
      :root{--body-font:"Noto Sans JP","Hiragino Sans","Yu Gothic UI","Meiryo",sans-serif}
      body{color:white;font-family:var(--body-font);margin:0}
      .hero{position:fixed;top:0;left:0;width:100%;height:100vh;overflow:hidden;z-index:1}
      .hero .container{height:100%;display:flex;align-items:center;position:relative;max-width:1110px;margin:0 auto;padding:0 15px}
      .hero-ttl{min-height:205px;opacity:0;transition:opacity 0.8s ease}
      .hero-ttl.show{opacity:1}
      .hero-ttl{font-size:6.4rem;font-weight:bold;line-height:1.6;margin:0}
      .hero-bg{position: absolute;top: 0;left: 0;width: 100%;height: 100%;}
      .hero-bg img{width: 100%;height: 100%;object-fit: cover;}
      @media (max-width:768px){.hero-ttl{margin-top:25vh;min-height:115px}.hero-ttl{font-size:3.6rem}}
    </style>
    
    <!-- Preconnect for Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    
    <!-- Background Image Preload -->
    <link rel="preload" as="image" href="/assets/images/hero.webp" type="image/webp" media="(min-width: 769px)" />
    <link rel="preload" as="image" href="/assets/images/hero-sp.webp" type="image/webp" media="(max-width: 768px)" />
    
    <!-- Google Fonts with font-display swap for immediate fallback -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@700&display=swap" rel="stylesheet" /></noscript>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" /></noscript>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <div set:html={scriptHtml} />
  </body>
</html>
